{
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "https://redirects.to.vercel.app/sitemap.xml",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": ".*"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "all"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}

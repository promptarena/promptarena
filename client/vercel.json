{
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "https://promptarena-server.onrender.com/sitemap.xml",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": ".*"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "all"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ],
  "overrides": {
    "/favicon.ico": {
      "path": "public/favicon.ico",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    "/favicon-16x16.png": {
      "path": "public/favicon-16x16.png",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    "/favicon-32x32.png": {
      "path": "public/favicon-32x32.png",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    "/favicon.svg": {
      "path": "public/favicon.svg",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  }
}
